{
  "name": "commons-ui",
  "description": "Code for Africa's common website components.",
  "author": "Code for Africa <hello@codeforafrica.org> (https://codeforafrica.org)",
  "license": "GPL-3.0-or-later",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^4.9.3",
    "@material-ui/icons": "^4.9.1",
    "@storybook/addon-a11y": "^6.0.21",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-console": "^1.1.0",
    "@storybook/addon-decorator": "^6.0.21",
    "@storybook/addon-docs": "^6.0.21",
    "@storybook/addon-knobs": "^6.0.21",
    "@storybook/addon-parameter": "^6.0.21",
    "@storybook/addon-preview-wrapper": "^6.0.21",
    "@storybook/addon-roundtrip": "^6.0.21",
    "@storybook/addon-storyshots": "^6.0.21",
    "@storybook/addon-storysource": "^6.0.21",
    "@storybook/addon-viewport": "^6.0.21",
    "@storybook/addons": "^6.0.21",
    "@storybook/components": "^6.0.21",
    "@storybook/core-events": "^6.0.21",
    "@storybook/node-logger": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@storybook/source-loader": "^6.0.21",
    "@storybook/storybook-deployer": "^2.8.5",
    "@storybook/theming": "^6.0.21",
    "babel-loader": "^8.0.6",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "cpx": "^1.5.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-import-resolver-lerna": "^1.1.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^4.2.3",
    "jest": "^26.1.0",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.1.1",
    "prettier": "^2.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-is": "^16.8.0",
    "regenerator-runtime": "^0.13.5",
    "simplebar": "^5.1.0",
    "simplebar-react": "^2.1.0",
    "typescript": "^4.0.2",
    "webpack": "^4.42.1"
  },
  "dependencies": {
    "inquirer": "^7.3.3"
  },
  "scripts": {
    "storybook": "start-storybook",
    "start": "yarn storybook",
    "lint": "yarn eslint --fix --ignore-path './.gitignore' --ext '.js,.json,.md' './'",
    "lint-staged": "yarn eslint --fix --ext '.js,.json,.md'",
    "format": "yarn prettier --write --ignore-path './.gitignore' \"**/*.+(json|md|yml)\" './'",
    "format-staged": "prettier --write",
    "copy-svg-to-lib": "cpx \"./src/**/*.svg\" ./dist",
    "copy-png-to-lib": "cpx \"./src/**/*.png\" ./dist",
    "prebuild": "yarn lint && yarn format",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d ../../build --copy-files ./package.json ../../build --ignore **/*.story.js,**/*.spec.js",
    "postbuild": "yarn copy-svg-to-lib && yarn copy-png-to-lib",
    "deploy": "storybook-to-ghpages",
    "preversion": "NODE_ENV=production yarn build",
    "postversion": "lerna exec --parallel -- cp ./package.json ./README.md ../../LICENSE.md ./build",
    "publish:packages": "yarn lerna publish --contents build",
    "release": "yarn build",
    "preprojects-dev": "NODE_ENV=production yarn build ",
    "projects-dev": "node pre-package-install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "yarn lint-staged"
    ],
    "*.{json,md,yml}": [
      "yarn format-staged"
    ]
  },
  "engines": {
    "node": ">=12.18.0 <15.x",
    "yarn": ">=1.19.2 <2.x"
  },
  "workspaces": [
    "packages/*"
  ]
}
